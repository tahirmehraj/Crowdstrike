# terraform.tfvars.example
# Copy this file to terraform.tfvars and edit values for your environment

# Which AWS region to create the cluster in
aws_region         = "us-east-1"

# What to name your cluster (this will show up in AWS console)
cluster_name       = "demo-eks-cluster"

# Which Kubernetes version to install
cluster_version    = "1.28"

# Use your existing VPC & subnets (you need to find these in your AWS account)
vpc_id             = "vpc-0a1b2c3d4e5f6g7h"    # Replace with your actual VPC ID
subnet_ids         = [
  "subnet-0123456789abcdef0",     # Replace with your actual subnet ID in AZ 1
  "subnet-0fedcba9876543210",     # Replace with your actual subnet ID in AZ 2
  "subnet-0a1b2c3d4e5f67890"      # Replace with your actual subnet ID in AZ 3
]

# Provide existing IAM role ARNs (these must be created outside of this Terraform)
cluster_role_arn   = "arn:aws:iam::123456789012:role/eks-cluster-role"      # Replace with your cluster role ARN
node_group_role_arn= "arn:aws:iam::123456789012:role/eks-nodegroup-role"    # Replace with your node group role ARN

# Configuration for worker nodes (EC2 instances)
node_instance_type = "t3.medium"    # Type of EC2 instance (t3.medium = 2 vCPUs, 4 GB RAM)
node_desired       = 2              # Start with 2 nodes
node_min           = 2              # Never scale below 2 nodes
node_max           = 6              # Never scale above 6 nodes

# Tags to help organize and track costs
tags = {
  Owner   = "tahir"       # Replace with your name
  Purpose = "assignment"  # What this cluster is for
}