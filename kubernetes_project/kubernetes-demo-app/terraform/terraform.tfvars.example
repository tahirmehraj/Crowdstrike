# terraform.tfvars.example
# Copy to terraform.tfvars and edit values for your environment

aws_region         = "us-east-1"
cluster_name       = "demo-eks-cluster"
cluster_version    = "1.28"

# Use your existing VPC & subnets
vpc_id             = "vpc-0a1b2c3d4e5f6g7h"
subnet_ids         = ["subnet-0123456789abcdef0","subnet-0fedcba9876543210","subnet-0a1b2c3d4e5f67890"]

# Provide existing IAM role ARNs (created outside of this Terraform)
cluster_role_arn   = "arn:aws:iam::123456789012:role/eks-cluster-role"
node_group_role_arn= "arn:aws:iam::123456789012:role/eks-nodegroup-role"

node_instance_type = "t3.medium"
node_desired       = 2
node_min           = 2
node_max           = 6

tags = {
  Owner   = "tahir"
  Purpose = "assignment"
}
